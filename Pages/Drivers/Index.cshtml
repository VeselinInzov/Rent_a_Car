@page
@model Car_Rental.Pages.Drivers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Drivers</h2>

<p>
    <a class="btn btn-primary" asp-page="Create">Add New Driver</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Driver[0].DriverName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Driver[0].Car)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Driver) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DriverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Car.CarRegNo)
            </td>
            <td>
                <a  class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
