@page
@model Car_Rental.Pages.Drivers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Driver</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Driver.Id" />
            <div class="form-group">
                <label asp-for="Driver.DriverName" class="control-label"></label>
                <input asp-for="Driver.DriverName" class="form-control" />
                <span asp-validation-for="Driver.DriverName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Driver.CarId" class="control-label"></label>
                <select asp-for="Driver.CarId" class="form-control" asp-items="ViewBag.CarId"></select>
                <span asp-validation-for="Driver.CarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
